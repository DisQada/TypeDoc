{
    "$schema": "https://typedoc.org/schema.json",

    "plugin": [
        "@mxssfd/typedoc-theme",
        "typedoc-plugin-missing-exports",
        "typedoc-plugin-extras"
    ],
    "name": "{{github}}",

    "entryPoints": ["../../../../{{types}}/exports.*"],
    "out": "../../../../{{out}}",
    "readme": "../../../../README.md",
    "tsconfig": "./tsconfig.doc.json",

    "navigation": {
        "includeCategories": true,
        "includeGroups": true
    },
    "navigationLinks": {
        "npm": "https://www.npmjs.com/package/@disqada/{{npm}}",
        "GitHub": "https://github.com/DisQada/{{github}}",
        "DisQada": "https://github.com/DisQada",
        "Developer": "https://links.nabilalsaiad.com"
    },

    "emit": "docs",
    "entryPointStrategy": "expand",
    "commentStyle": "jsdoc",
    "htmlLang": "en-GB",

    "theme": "my-theme",
    "darkHighlightTheme": "dark-plus",
    "lightHighlightTheme": "light-plus",

    "includeVersion": true,
    "skipErrorChecking": true,
    "jsDocCompatibility": true,
    "categorizeByGroup": false,

    "visibilityFilters": {
        "private": false,
        "protected": false,
        "inherited": false,
        "external": false
    },

    "exclude": ["**/node_modules/**/*"],
    "excludePrivate": true,
    "excludeProtected": true,
    "excludeReferences": false,
    "excludeNotDocumented": false,

    "customTitle": "Home",
    "footerLastModified": true,
    "footerTypedocVersion": true
}
